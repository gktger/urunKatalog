@using urunKatalog.MvcWebUI.Controllers
@using urunKatalog.MvcWebUI.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="container pb-5">

    <div class="row">
        <div class="col-md-3">
           @Html.Action("GetCategories","Home")
        </div>
        <div class="col-md-9" id="col-md-9-responsive">
            
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    Bu kategoride bir ürün bulunamadı!
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <strong>@Model.Count() adet</strong>  ürün bulundu.
                </div>
            }

            @Html.Partial("_ProductList", Model)
        </div>
    </div>

</div>
